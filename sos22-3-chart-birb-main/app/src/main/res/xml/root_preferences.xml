<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Settings">

        <EditTextPreference
            app:key="currency"
            app:title="Currency"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="USD"/>
        <EditTextPreference
            app:key="datefrom"
            app:title="Date from"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="2022-03-01"/>
        <EditTextPreference
            app:key="dateto"
            app:title="Date to"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="2022-04-01"/>





    </PreferenceCategory>

</PreferenceScreen>